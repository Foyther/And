<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nurislam.test.MainActivity">

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_below="@+id/number"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/answer"
        android:text="@string/n1"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/answer"
        android:layout_toRightOf="@+id/btn1"
        android:text="@string/n2"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/answer"
        android:layout_toRightOf="@+id/btn2"
        android:text="@string/n3"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn1"
        android:text="@string/n4"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn4"
        android:text="@string/n5"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:text="@string/n6"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:text="@string/n7"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn7"
        android:text="@string/n8"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn8"
        android:text="@string/n9"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btn0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/answer"
        android:text="@string/n0"
        android:textSize="30dp"/>

</RelativeLayout>
