<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"/>

    <View
        android:id="@+id/line_near_name_and_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/name_txt"
        android:background="@color/colorView"></View>

    <TextView
        android:id="@+id/full_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsfsdffdsfdssssssssssssdddddddddddddddddddddddddddddddddddddddd"
        android:lines="1"
        android:textSize="20dp"
        android:layout_below="@id/line_near_name_and_text"
        android:padding="10dp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/full_txt"
        android:background="@color/colorBlack"></View>
</LinearLayout>